@using package_tracking_app.ViewModels
@model MainModel;

<div class="row">
    <h1>@Model.Package.Description: @Model.Package.TrackingNumber </h1>
</div>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Status</th>
        <th scope="col">Date</th>
        <th scope="col">Details</th>
        <th scope="col">Location</th>
    </tr>
    </thead>
        <tbody>
    @foreach (var checkpoint in Model.TrackHistory.Checkpoints)
    {

            <tr>
                <td>@checkpoint.Status</td>
                <td>@checkpoint.StatusDate</td>
                <td>@checkpoint.StatusDetails</td>
                @if (checkpoint.Location == null)
                {
                    <td>unknown</td>
                } else
                {
                     <td>@checkpoint.Location.City</td>
                }

            </tr>
    }
        </tbody>
</table>
