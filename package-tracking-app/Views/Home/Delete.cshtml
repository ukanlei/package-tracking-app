@using package_tracking_app.ViewModels
@model MainModel;

<h1>Delete Pacakge</h1>

@if (Model.PackageList.Count == 0)
{
    <p>There are no packages to track yet!</p>
}
else
{
    <form asp-controller="Home" asp-action="Delete">
        <table class="table">
            <tr>
                <th></th>
                <th>
                    Description
                </th>
                <th>
                    Tracking Number
                </th>
                <th>
                    Carrier
                </th>
            </tr>
            @foreach (Package package in Model.PackageList)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@package.Id" class="form-control">
                    </td>
                    <td><a asp-controller="Home" asp-action="Detail" asp-route-id="@package.Id">@package.Description</a></td>
                    <td>@package.TrackingNumber</td>
                    <td>@package.Carrier</td>
                </tr>
            }
        </table>
        <input type="submit" value="Delete Selected Packages" class="btn btn-danger">
    </form>
}
